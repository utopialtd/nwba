<?xml version='1.0' encoding='utf-8'?>
<widget id="nz.co.northwestcountry.buylocal" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Buy Local Northwest</name>
    <description>
        [description]
    </description>
    <author email="info@utopia.co.nz" href="http://cordova.io">
        [the team]
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <access launch-external="yes" origin="tel:*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-sqlite-storage" spec="~2.0.2" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.2" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.6" />
    <plugin name="phonegap-facebook-plugin" spec="https://github.com/phonegap/phonegap-facebook-plugin.git">
        <variable name="APP_ID" value="253782148425213" />
        <variable name="APP_NAME" value="Buy Local Norwest" />
    </plugin>
    <plugin name="cordova-plugin-dialogs" spec="~1.3.2" />
</widget>
